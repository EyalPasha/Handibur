{
  "expo": {
    "name": "Handibur",
    "slug": "palmphrase",
    "version": "0.0.11",
    "orientation": "portrait",
    "icon": "./assets/images/iphoneIcon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/Splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F5F5F5"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.decodedsolutions.handibur",
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true,
        "NSCameraUsageDescription": "This app uses the camera to video call your friends.",
        "NSMicrophoneUsageDescription": "This app uses the microphone to record your voice.",
        "NSLocalNetworkUsageDescription": "This app uses local networks to connect to other devices."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/androidIcon.png",
        "backgroundColor": "#F5F5F5"
      },
      "permissions": [
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.BLUETOOTH",
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.RECORD_AUDIO",
        "android.permission.SYSTEM_ALERT_WINDOW",
        "android.permission.WAKE_LOCK"
      ],
      "package": "com.decodedsolutions.handibur"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "3d191cbc-5ebc-4a7f-b3aa-a29090f7dfe2"
      }
    },
    "owner": "decodedsolutions"
  }
}
